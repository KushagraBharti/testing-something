{
  "name": "pulse-kit",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological run build",
    "dev:web": "yarn --cwd apps/web dev",
    "dev:ext": "yarn --cwd apps/extension dev",
    "dev:api": "yarn --cwd apps/api dev",
    "lint": "yarn workspaces foreach run lint",
    "test": "yarn workspaces foreach run test",
    "qa": "yarn --cwd packages/shared test && yarn --cwd apps/api test && yarn --cwd apps/extension test && yarn --cwd apps/web test"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}
